/**index.wxss**/
page{
  height:100%;
}

.body{ 
  min-height:100%; 
  padding:0; 
  margin:0; 
  position:relative; 
}

.body::after{ 
  content:''; 
  display:block; 
  height:30px; 
}

.intro-img{
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
}

video{
  width: 100%;
}

.title{
  font-family: 'Acumin-RPro';
  font-weight: bold;
}

.container{
  width: 80%;
}

.intro{
  margin-bottom:110rpx;
  padding-bottom: 5%; /*d9d9d6*/
}

.picker{
  font-size: 20rpx;
  height:     40rpx;
  line-height: 42rpx;
  position: absolute;
  right: 50rpx;
}

.navigation {
  padding-left: 2.5%;
  padding-right: 2.5%;
  background: #D9D9D6;
}

.row{
  position:relative;
  bottom:80rpx;
}

.van-col--8{
  width: 31.333333333% !important;
  margin-left: 1%;
  margin-right: 1%;
}

.block{
  text-align: center;
  background: #ffffff;
  border: 1px solid #D9D9D6;
}

.icon{
  width: 100%;
  display: inline-block;
}

.link{
  font-size: 35rpx;
  font-weight: bold;

  position:relative;
  bottom:40rpx;
}

.banner-image{
  display: block;
  width: 100%;
}

.slider{
  position: relative;
}

.tools{
  text-align: center;
}

.tools-header{
  margin-bottom: 2.5%;
}

.img-calculator{
  width: 33.33%;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.tools_title{
  font-size: 35rpx;
  line-height: 40rpx;

  font-weight: bold;

  bottom:30rpx;
}

.van-button{
  width: 80% !important;
  margin-left: 10% !important;
  margin-right: 10% !important;
  margin-bottom: 2.5% !important;
}

.calculator > button{
  color: #ffffff;
  background: #217fd4;
}

.footer{
  color: rgb(217, 218, 214);
  font-size: 20rpx;
  text-align: center;

  z-index: -10;

  position:absolute; 
  bottom:0; 
  width:100%; 
  height:30px; 
}